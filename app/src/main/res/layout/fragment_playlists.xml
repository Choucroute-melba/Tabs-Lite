<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="noPlaylists"
                type="boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/playlists_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lblSortBy"
                    isGone="@{!noPlaylists}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/sort_by"
                    android:layout_gravity="center_vertical"
                    />
                <Spinner
                    android:id="@+id/sortBy"
                    isGone="@{!noPlaylists}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginVertical="6dp"
                    android:entries="@array/playlist_sort_options"
                    android:gravity="end|center_vertical"
                    android:padding="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                isGone="@{noPlaylists}"
                tools:visibility="gone">
                <TextView
                    android:id="@+id/noPlaylistsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/playlists_empty"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="@dimen/margin_normal"
                android:id="@+id/favorite_tabs_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/list_item_playlist" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_plus"
            android:contentDescription="@string/add_to_playlist"
            app:layout_anchor="@id/sortBy"
            app:layout_anchorGravity="top|end"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
